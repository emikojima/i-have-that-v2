<div class="form">

  <h2> Edit Item </h2>
  <%= form_for @item do |f| %>
  <%= f.hidden_field :user_id %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br><br>
  <%= f.label :available, "Check this box if this item is available for lending"%>
  <%= f.check_box :available %>
  <%= f.submit %>
  <% end %>

</div>
