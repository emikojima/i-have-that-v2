<div class="form">

  <% if @user.id == current_user.id %>
      <h3>Your Item:</h3><br>
    <h4>∇ <%= @item.name %> (<%= @item.category.name %>) ∇ </h4>
      <p><%= @item.description %><br></p>
      <p>Availability: <%= @item.available ? "This item is AVAILABLE" : "UNAVAILABLE. Please Check Back Later" %></p>  <br>
      <%= link_to "Edit This Item", edit_user_item_path(@user, @item) %><br>
      <%= link_to "Delete This Item", user_item_path(@user, @item), method: :delete %>
  <% else %>
      <h2> <%= @user.name %>'s Item</h2><br>
        <h4>∇ <%= @item.name %> (<%= @item.category.name %>) ∇ </h4>
      <p><%= @item.description %><br></p>
      <p>Availability: <%= @item.available ? "This item is AVAILABLE" : "UNAVAILABLE. Please Check Back Later" %></p>  <br><br
      <br>All of <%= link_to "#{@user.name}'s items", user_path(@user) %>
      <br>Contact <a href="mailto:<%= @item.user.email %>?subject=Message from IHT Re: <%= @item.name %> &body=Message sent from IHT (I HAVE THAT App) "> <%=@item.user.name.upcase%></a> to borrow this item.
  <% end %>
</div>
