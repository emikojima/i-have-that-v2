<!DOCTYPE html>
<html>
  <head>
    <title>IHaveThatV2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


<body class="img-responsive main-image" background = url( asset-path('nature1.jpg') )>
